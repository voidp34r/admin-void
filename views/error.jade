include core/head

block content
body.animated-content
      #layout-static
          .static-content-wrapper
            .col-md-12
            .page-content
                .row
                  .col-md-12
                    .panel.panel-default(data-widget='{"draggable": "false"}')
                      .panel-heading
                        | Error :PPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPPP
                        .panel-ctrls(data-actions-container='', data-action-collapse='{"target": ".panel-body"}')
                      .panel-body
                        p.m-n
                        a.btn.btn-default.pull-left(href='/logout') logout
                        a.btn.btn-default(href='/home') home
                        a.btn.btn-primary.pull-right(href='/login') login

            .static-content
              .page-content
                .row
                  .col-md-4
                    .panel.panel-default(data-widget='{"draggable": "false"}')
                      .panel-heading
                        | Mensagem de Error:
                        h5= message
                        .panel-ctrls(data-actions-container='', data-action-collapse='{"target": ".panel-body"}')
                      .panel-body
                        p.m-n
                        | Erro status:
                        h5= error.status
                        a #{error.stack}

include core/scripts