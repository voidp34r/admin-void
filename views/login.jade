                  .clearfix
                    a.btn.btn-default.pull-left(href='/register') Registrar
                    a.btn.btn-primary.pull-right(href='#')
                        input.btn.btn-primary.pull-right(type='submit', value='Login')
          .text-center
            a.btn.btn-label.btn-social.btn-facebook.mb-md(href='#')
